<body>
  <h1>Submit YouTube Video URL</h1>
  <input type="text" id="youtube_url" placeholder="Paste YouTube link here" />
  <button onclick="submitURL()">Generate Quiz</button>
  <div class="message" id="response"></div>

  <script>
    async function submitURL() {
      const url = document.getElementById("youtube_url").value;
      const responseDiv = document.getElementById("response");

      if (!url.trim()) {
        responseDiv.innerText = "Please enter a valid YouTube URL.";
        return;
      }

      responseDiv.innerText = "Submitting...";

      try {
        const response = await fetch("/api/logVideoUrl", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ youtube_url: url })
        });

        const result = await response.json();
        if (response.ok) {
          responseDiv.innerText = "✅ Success! Your video URL was logged.";
        } else {
          responseDiv.innerText = "❌ Error: " + result.error;
        }
      } catch (err) {
        responseDiv.innerText = "❌ Network error or server not responding.";
      }
    }
  </script>
</body>
</html>

